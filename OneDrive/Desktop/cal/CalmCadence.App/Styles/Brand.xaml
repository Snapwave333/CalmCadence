<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!-- CalmCadence Branding Tokens -->
  <!-- Primary palette: purple-centric with cool accent -->
  <Color x:Key="BrandPrimary">#512BD4</Color>
  <Color x:Key="BrandSecondary">#7E57C2</Color>
  <Color x:Key="BrandAccent">#22D3EE</Color>
  <Color x:Key="BrandForeground">#FFFFFFFF</Color>
  <Color x:Key="BrandBackground">#0B1021</Color>

  <!-- Semantic brushes -->
  <SolidColorBrush x:Key="BrandPrimaryBrush" Color="{StaticResource BrandPrimary}" />
  <SolidColorBrush x:Key="BrandSecondaryBrush" Color="{StaticResource BrandSecondary}" />
  <SolidColorBrush x:Key="BrandAccentBrush" Color="{StaticResource BrandAccent}" />
  <SolidColorBrush x:Key="BrandForegroundBrush" Color="{StaticResource BrandForeground}" />
  <SolidColorBrush x:Key="BrandBackgroundBrush" Color="{StaticResource BrandBackground}" />

  <!-- Button styles aligning to brand -->
  <Style x:Key="BrandButton" TargetType="Button">
    <Setter Property="Background" Value="{StaticResource BrandPrimaryBrush}" />
    <Setter Property="Foreground" Value="{StaticResource BrandForegroundBrush}" />
    <Setter Property="CornerRadius" Value="8" />
    <Setter Property="Padding" Value="14,10" />
  </Style>

  <Style x:Key="BrandAccentButton" TargetType="Button" BasedOn="{StaticResource BrandButton}">
    <Setter Property="Background" Value="{StaticResource BrandAccentBrush}" />
  </Style>

  <!-- Text styles -->
  <Style x:Key="BrandHeading" TargetType="TextBlock">
    <Setter Property="Foreground" Value="{StaticResource BrandPrimaryBrush}" />
    <Setter Property="FontSize" Value="20" />
    <Setter Property="FontWeight" Value="SemiBold" />
  </Style>

  <Style x:Key="BrandBody" TargetType="TextBlock">
    <Setter Property="Foreground" Value="{StaticResource BrandForegroundBrush}" />
    <Setter Property="FontSize" Value="14" />
  </Style>
</ResourceDictionary>